@using BornAgainWiki.Models.Search
@model SearchViewModel

@{
	ViewData["Title"] = "Search Results";
	ViewData["AppClass"] = "app-content-full-height";
}


@section Styles {

}

@section Scripts {

}

<!-- BEGIN container -->
<div class="container">
	<!-- BEGIN row -->
	<div class="row justify-content-center">
		<!-- BEGIN col-10 -->
		<div class="col-xl-10">
			<!-- BEGIN row -->
			<div class="row">
				<!-- BEGIN col-9 -->
				<div class="col-xl-9">

					<h1 class="page-header">
						Search Results <small>for "@(Model.Query)"</small>
					</h1>

					<!-- BEGIN search-result -->
					<div class="search-result">
						<!-- BEGIN search-result-list -->
						<div class="search-result-list">
							@foreach (var result in Model.Pages)
							{
								<div class="search-result-item">
									<div class="search-result-media">
										<a href="/@result.PageKey"><img src="@result.Image" alt=""></a>
									</div>
									<div class="search-result-content row align-items-center">
										<div>
											<h3><a href="/@result.PageKey">@result.Title</a></h3>
											<a class="text-reset" href="/@result.PageKey">https://wiki.bornagain.gg/@result.PageKey</a>
											<p class="mt-2">
												@result.Description
											</p>
										</div>
									</div>
								</div>
							}
						</div>
						<!-- END search-result-list -->
					</div>
					<!-- END search-result -->
				</div>
				<!-- END col-3 -->
			</div>
			<!-- END row -->
		</div>
		<!-- END col-10 -->
	</div>
	<!-- END row -->
</div>
<!-- END container -->